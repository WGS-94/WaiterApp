{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs", 
    "outDir": "./dist",
    "rootDir": "./src",               
    "esModuleInterop": true,                             
    "strict": true,
    "strictPropertyInitialization": false, 
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                     
  }
}
